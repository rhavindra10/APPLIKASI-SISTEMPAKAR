<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
    android:layout_height="match_parent"
    tools:context=".help"
    android:background="@drawable/background">

    <androidx.gridlayout.widget.GridLayout

        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="312dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/box1"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/texthelp"
            android:layout_width="407dp"
            android:layout_height="60dp"
            android:background="@drawable/box1"
            android:drawableLeft="@mipmap/diagnosaicon"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:text="DIAGNOSA"
            android:textCursorDrawable="@drawable/dg"
            android:textSize="28sp"
            android:textStyle="normal|bold"
            app:layout_column="0"
            app:layout_row="0" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <TextView
            android:id="@+id/texthelp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/box1"
            android:scrollbars="vertical"
            android:text="@string/diagnosahelp"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            app:layout_column="0"
            app:layout_row="0" />
    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="282dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/box1"
        android:overScrollMode="always"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout">

        <TextView
            android:id="@+id/texthelp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/datalist"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:text="datalist"
            android:textAllCaps="true"
            android:textCursorDrawable="@drawable/dg"
            android:textSize="28sp"
            android:textStyle="normal|bold"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="206dp"
            android:layout_margin="30dp"
            android:layout_marginTop="70dp"
            android:text="@string/datalist"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            app:layout_column="0"
            app:layout_row="0" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>